root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[Makefile*]
indent_style = tab
indent_size = 4

[*.{c,h,rs}]
indent_style = space
indent_size = 4

[*.sh]
indent_style = space
indent_size = 2

[*.md]
# Preserve trailing whitespace for Markdown files
trim_trailing_whitespace = false
